<%= form_with(model: article) do |f| %>
  <% if article.errors.any? %>
    <div id="error_explanation">
      <ul>
        <% article.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  
  <p class="fw-bold">
    <%= f.label :string, 'タイトル' %><br>
    <%= f.text_field :title, autofocus: true, class: "text-title" %>
  </p>
  <p class="fw-bold">
    <%= f.label :content, '本文' %><br>
    <%= f.text_area :content, class: "text-content" %>
  </p>
  
  <p>
    <%= f.label :image do %>
      <span class=" form-img fa-solid fa-camera"> ファイルを選択</span>
    <% end %>
    <%= f.file_field :image, class: "form-article-img", style: "display:none;" %>
  </p>
  <p>
    <% if @article.image.present? %>
      <%= image_tag @article.image.url, id: :img_prev %>
    <% else %>
      <%= image_tag "noimage.png", id: :img_prev %>
    <% end %>
  </p>

  <p class="fw-bold mt-5">
    <%= f.label :tag_names, 'タグ' %><br>
    <%= f.text_field :tag_names, placeholder:"スペースで区切ってください", class: "text-tag" %>
  </p>
  <p class="text-center">
    <%= f.submit '投稿', class: "post-button" %>
  </p>
<% end %>