<h1><%= @article.title %></h1>

<p><%= @article.content %></p><br>
   <% @article_tags.each do |tag| %>
      <%= link_to tag.tag_name, search_path(tag_id: tag.id) %>
   <% end %>
<p><%= @article.created_at.to_s(:datetime_jp) %></p>

<%= render 'likes/like_button', article: @article %>
<%= link_to '記事一覧に戻る', user_path(current_user) %>

<% if logged_in? && current_user.id == @article.user_id %>
<%= link_to 'この記事を編集する', edit_article_path(@article) %>
<%= link_to 'この記事を削除する', @article, method: :delete, data: { confirm: '本当に削除してよろしいですか？' } %>
<% end %>