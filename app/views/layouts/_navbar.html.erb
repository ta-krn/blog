<header class="mb-4">
  <nav class="navbar">
    <a class="navbar-brand" href="/">F.LOG</a>

    <div class="justify-content-end" id="navbarSupportedContent">
      <% if logged_in? %>
        <div class="btn-group">
          <button type="button" class="btn dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false"><%= image_tag 'circle-user-solid.svg', size: '25x25' %></button>
          <ul class="dropdown-menu dropdown-menu-end">
            <li class="dropdown-item"><%= link_to 'マイページ', user_path(current_user), class: 'nav-link' %></li>
            <li class="dropdown-item"><%= link_to '新規投稿', new_article_path, class: 'nav-link' %></li>
            <li class="dropdown-item"><%= link_to 'いいねした記事', like_articles_user_path(@current_user), class: 'nav-link' %></li>
            <li class="dropdown-divider"></li>
            <li class="dropdown-item"><%= link_to 'ログアウト', logout_path, method: :delete, class: 'nav-link' %></li>
          </ul>
        </div>
      <% else %>
        <ul class="navbar-nav">
          <li class="nav-item"><%= link_to '会員登録', signup_path, class: 'nav-link' %></li>
          <li class="nav-item"><%= link_to 'ログイン', login_path, class: 'nav-link' %></li>
        </ul>
      <% end %>
    </div>
  </nav>
</header>